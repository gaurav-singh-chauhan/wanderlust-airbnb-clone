<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    #domes{
        opacity: 1;
    }

    #filters a{
        color: black;
    }

    .filter{
        text-align: center;
        font-weight: 600;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        cursor: pointer;
    }

    .filter:hover{
        opacity: 1;
    }

    .filter p{
        font-size: 0.8rem;
    }

    .tax-info{
        display: none;
    }

    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 2.5rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }
</style>
<% layout("/layouts/boilerplate") %>

<!-- Filters -->
<div id="filters">
    
    <div class="filter" id="trending">
        <div>
            <a href="/listings">
                <i class="fa-solid fa-fire"></i>
            </a>
        </div>
        <p>Trending</p>
    </div>

    <div class="filter" id="rooms">
        <div>
            <a href="/listings/rooms">
                <i class="fa-solid fa-bed"></i>
            </a>
        </div>
        <p>Rooms</p>
    </div>

    <div class="filter" id="iconic-cities">
        <div>
            <a href="/listings/iconic-cities">
                <i class="fa-solid fa-mountain-city"></i>
            </a>
        </div>
        <p>Iconic cities</p>
    </div>

    <div class="filter" id="mountains">
        <div>
            <a href="/listings/mountains">
                <i class="fa-solid fa-mountain"></i>
            </a>
        </div>
        <p>Mountains</p>
    </div>

    <div class="filter" id="castles">
        <div>
            <a href="/listings/castles">
                <i class="fa-brands fa-fort-awesome"></i>
            </a>
        </div>
        <p>Castles</p>
    </div>

    <div class="filter" id="amazing-pools">
        <div>
            <a href="/listings/amazing-pools">
                <i class="fa-solid fa-person-swimming"></i>
            </a>
        </div>
        <p>Amazing pools</p>
    </div>

    <div class="filter" id="camping">
        <div>
            <a href="/listings/camping">
                <i class="fa-solid fa-campground"></i>
            </a>
        </div>
        <p>Camping</p>
    </div>
    
    <div class="filter" id="farms">
        <div>
            <a href="/listings/farms">
                <i class="fa-solid fa-cow"></i>
            </a>
        </div>
        <p>Farms</p>
    </div>
    
    <div class="filter" id="arctic">
        <div>
            <a href="/listings/arctic">
                <i class="fa-regular fa-snowflake"></i>
            </a>
        </div>
        <p>Arctic</p>
    </div>
    
    <div class="filter" id="domes">
        <div>
            <a href="/listings/domes">
                <i class="fa-solid fa-igloo"></i>
            </a>
        </div>
        <p>Domes</p>
    </div>
    
    <div class="filter" id="boats">
        <div>
            <a href="/listings/boats">
                <i class="fa-solid fa-ship"></i>
            </a>
        </div>
        <p>Boats</p>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <label for="flexSwitchCheckDefault" class="form-check-label">Display total after taxes</label>
            <input type="checkbox" class="form-check-input" role="switch" id="flexSwitchCheckDefault">
        </div>
    </div>

</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allDomesListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %> <br></b>
                &#8377;<%= listing.price.toLocaleString("en-IN"); %> night
                <i class="tax-info"> &nbsp;&nbsp; +18% GST </i>
            </p>
        </div>
    </div>
    </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    let taxInfo = document.getElementsByClassName("tax-info");

    taxSwitch.addEventListener("click", () => {
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            } else{
                info.style.display = "none";
            }
        };
    });
    
</script>